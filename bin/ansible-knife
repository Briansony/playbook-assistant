#!/usr/bin/env python

import sys, os

path = os.path.dirname(os.path.abspath(__file__))
sys.path.append('/'.join(path.split('/')[0:-1]))

from helpers.params import args
from helpers.worker import playbook_creator
from helpers.cvs.github import Github


if args['subparser_name'] == 'create':
    if args['task'] == 'create':
        playbook_creator(**args).playbook_create()
    else:
        playbook_creator(**args).playbook_add()
else:
    Github(**args).repo_clone()
